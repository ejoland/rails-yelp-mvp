<%= form_with(model: restaurant, url: restaurants_path, local: true) do |form| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
        <% restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

<div class="form-group mb-3">
  <%= form.label :category %>
  <%= form.select :category, options_for_select(["chinese", "italian", "japanese", "french", "belgian"]), {}, class: "form-control" %>
</div>

<div class="mb-3"></div>

<div class="form-group">
  <%= form.submit "Create Restaurant", class: "btn btn-primary mr-2" %>
</div>

<div class="mb-3"></div>
<% end %>
