<h1>Restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add', new_restaurant_path, class: 'btn btn-primary' %>
